<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EasyTabsAttrs">

        <!--STYLE-->

        <attr name="selected_color" format="color" />
        <attr name="unselected_color" format="color" />
        <attr name="bold_for_selected" format="boolean" />
        <attr name="selected_size" format="dimension" />
        <attr name="selected_padding_bottom" format="dimension" />
        <attr name="selected_padding_top" format="dimension" />

        <!--INDICATOR-->

        <attr name="indicator_speed" format="integer" />
        <attr name="indicator_color" format="color" />
        <attr name="indicator_shape" format="reference|color" />
        <attr name="indicator_width" format="dimension" />
        <attr name="indicator_height" format="dimension" />
        <attr name="indicator_size" format="enum">
            <enum name="text" value="0"/>
            <enum name="image" value="0"/>
            <enum name="value" value="1"/>
            <enum name="match_parent" value="2"/>
            </attr>
        <attr name="indicators" format="boolean" />

        <!--SEP-->

        <attr name="separators" format="boolean" />
        <attr name="separator_color" format="color" />


    </declare-styleable>
</resources>